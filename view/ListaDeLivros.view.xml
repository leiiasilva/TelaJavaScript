<mvc:View
		controllerName="sap.ui.demo.walkthrough.controller.ListaDeLivros"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc">
	<Table
		id="listaDeLivros"
		class="sapUiResponsiveMargin"
		width="auto"
		mode="MultiSelect"
		items="{
			path : 'listaDeLivros>/ListaDeLivros',
			sorter : {
				path : 'LivroEditora',
				group : true
			}
		}">
		<headerToolbar>
			<Toolbar>
			<SearchField width="30%" search=".onFilterListaDeLivros"/>
				<ToolbarSpacer/>
				<Button type="Navigation"  icon="sap-icon://create-form" text="Cadastrar" press=".botaoCadastrar"/>
				<Button type="Navigation" text="Editar"  press=".botaoEditar" icon="sap-icon://edit" />
				<Button type="Navigation" text="Deletar"  press=".botaoDeletar" icon="sap-icon://delete" />
				
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				id="tabelaLivros"
				minScreenWidth="Small"
				demandPopin="true"
				width="10em">
				<Text text="{i18n>colunaID}"/>
			</Column>
			<Column>
				<Text text="{i18n>colunaNome}"/>
			</Column>
			<Column
				minScreenWidth="Small"
				demandPopin="true">
				<Text text="{i18n>colunaAutor}"/>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="false">
				<Text text="{i18n>colunaEditora}"/>
			</Column>
			<Column
				hAlign="">
				<Text text="{i18n>colunaAnoPublicacao}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem
				type="Navigation"
				press=".onPress">
				<cells>
					
					
				</cells>
			</ColumnListItem>
		</items>
	</Table>

</mvc:View>